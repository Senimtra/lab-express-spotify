<div class='container'>
   <table class='table table-striped table-hover'>
      <tbody>
         <thead>
            <tr>
               <th><h3>Title</h3></th>
               <th style='text-align: center'><h3>Listen</h3></th>
            </tr>
         </thead>
         {{#each data}}
            <tr class=''>
               <td valign='middle' class='track-name'><strong>{{name}}</strong></td>
               <td align='right' class='audio-controls'><audio controls><source src='{{preview_url}}' />Your browser does not support the audio tag.</audio></td>
            </tr>
         {{/each}}
      </tbody>
   </table>
</div>
